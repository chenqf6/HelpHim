template(name='oneTask')
  div.container-fluid
    div.row
      +functionalArea
      +oneTaskContent

template(name='oneTaskContent')
  div.col-md-offset-3.col-md-9.one-task-content
    div.page-header
      h1 任务详情
    div.panel.panel-primary
      div.panel-heading #{ title }
      div.panel-body
        div.row
          div.col-md-2.text-center
            p
              strong 类别
          div.col-md-10
            p #{ type }

          div.col-md-2.text-center
            p 
              strong 描述
          div.col-md-10
            p #{ description }

          div.col-md-2.text-center
            p 
              strong 截止
          div.col-md-10
            p #{ deadline.toLocaleString }

          div.col-md-2.text-center
            p 
              strong 酬劳
          div.col-md-10
            p #{ reward }

          if isExecutant task.executant
            div.col-md-2.text-center
              p 
                strong 联系方式
            div.col-md-10
              p #{ task.contact }

          div.col-md-2.text-center
            p 
              strong 申请人
          div.col-md-10
            each applicantsAndReasons
              div.media.applicants.alert-info.alert
                div.media-left
                  a(href='#') 
                    img.media-object(src = '{{userImageSrc name}}')
                div.media-body
                  a
                    h4.media-heading #{ name }
                  div.col-md-10.reason #{ reason }
                  if isPublisher task.createdBy
                    button.btn.btn-info.btn-sm.pull-right 同意

