template(name='oneTask')
  div.container-fluid
    div.row
      +functionalArea
      +oneTaskContent

template(name='oneTaskContent')
  div.col-md-offset-3.col-md-9.one-task-content
    div.page-header
      h1 任务详情
    div.panel.panel-primary
      div.panel-heading #{ task.title }
      div.panel-body
        div.row
          div.col-md-1
            p
              strong 类别
          div.col-md-11
            p #{ task.type }

          div.col-md-1
            p 
              strong 描述
          div.col-md-11
            p #{ task.description }

          div.col-md-1 
            p 
              strong 截止
          div.col-md-11
            p #{ task.deadline.toLocaleString }

          div.col-md-1 
            p 
              strong 酬劳
          div.col-md-11
            p #{ task.reward }

          div.col-md-1 
            p 
              strong 申请人
          div.col-md-11
            each task.applicantsAndReasons
              div.media.applicants.alert-info
                div.media-left
                  a(href='#') 
                    img.media-object(src='images/hd.jpg')
                div.media-body
                  a
                    h4.media-heading= name
                  div.col-md-9.reason #{ reason }

                  button.pull-right haha
            //- each task.applicantsAndReasons
            //-   div.panel.panel-default.applicants
            //-     div.panel-heading
            //-       a(href='#') 
            //-         img.media-object.img-circle(src='images/hd.jpg')
            //-       div.panel-title.name= name
            //-     div.panel-body= reason
    div
      p
        strong 申请理由
    div.editor
      textarea.form-control(id="edit" name="content")

    div
      button.btn.btn-primary.pull-right 申请

